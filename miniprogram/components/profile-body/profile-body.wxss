.pro-body{
    position:relative;
    background: #fff;
    width:100%;
    height:700rpx;
    color:black;
    padding:0 60rpx;
    margin-top:-30rpx;
}
.pro-body .theme{
    font-size:40rpx;
    font-weight:700;
}
.pro-body .tasks{
    padding-left:50rpx;
    padding-top:40rpx;
}
.pro-body .tasks .tasks-item{
    position:relative;
    margin-bottom:50rpx;
}
.tasks-item .tasks-title{
    font-size:30rpx;
    font-weight:300;
}
.tasks-item .tasks-content{
    font-size:20rpx;
    font-weight:400;
    margin-top:10rpx;
    color:#818181;
}

.tasks-item image{
    position:absolute;
    right:40rpx;
    top:20rpx;
    width:20rpx;
    height:35rpx;
}
.tasks-item::after{
    content: '';
    position: absolute;
    left: -18px;
    top: 8px;
    height: 8px;
    width: 8px;
    border-radius: 50%;
}
.blue::after{
    background:blue;
}
.red::after{
    background:red;
}
.green::after{
    background:green;
}